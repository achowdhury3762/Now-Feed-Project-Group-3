<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:paddingRight="100dp"
        android:id="@+id/top_movie_text"
        android:textSize="40dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Top Movies of The Year"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/graygreenborder" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/moviedblogo"
        android:layout_alignParentEnd="true"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/movie_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_movie_text">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>