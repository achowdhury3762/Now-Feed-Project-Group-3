<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_margin="25sp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="30sp"
            android:gravity="center_vertical"
            android:text="2011 Popular Hits"
            android:id="@+id/movie_year_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="9dp"
            android:id="@+id/movie_imageView"
            android:layout_below="@id/movie_year_textView"
            android:layout_width="120dp"
            android:layout_height="211dp" />
        <TextView
            android:layout_below="@id/movie_year_textView"
            android:id="@+id/movie_row_title"
            android:layout_toRightOf="@id/movie_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>