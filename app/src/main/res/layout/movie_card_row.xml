<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/movie_imageView"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_above="@id/title_text" />

            <TextView
                android:id="@+id/movie_year_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/movie_imageView"
                android:background="@drawable/myborder"
                android:gravity="center"
                android:text="2011 Movie Popular Hits"
                android:textSize="30sp"
                android:padding="5dp"
                android:textStyle="bold"
                android:fontFamily="cursive"/>

            <TextView
                android:id="@+id/movie_row_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_below="@id/movie_year_textView"
                android:layout_toEndOf="@+id/movie_imageView"
                android:text="Heart"
                android:textSize="20sp"
                android:textStyle="italic" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>