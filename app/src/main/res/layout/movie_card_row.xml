<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_margin="8sp"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/movie_imageView"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_above="@id/title_text"
            />

        <TextView
            android:background="@drawable/myborder"
            android:textStyle="bold"
            android:layout_toRightOf="@id/movie_imageView"
            android:id="@+id/movie_year_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="2011 Movie Popular Hits"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/movie_row_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:text="Aerial Platform Operations"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/movie_imageView" />
    </RelativeLayout>
</android.support.v7.widget.CardView>